{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/lib/**/*",
    "src/types.ts",
    "src/client.ts",
    "src/config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "paths": {
      "@renderer/*": ["src/renderer/src/*"]
    }
  }
}
