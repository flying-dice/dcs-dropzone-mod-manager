{
  "name": "dcs-dropzone",
  "version": "1.18.0",
  "description": "A community Mod Manager for DCS World",
  "main": "./out/main/index.js",
  "author": "Flying Dice",
  "private": true,
  "engines": {
    "node": "^20.16.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "npm run build"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/*.exe",
            "dist/*.yml",
            "dist/*.yaml"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "prebuild": "npm run typecheck",
    "build": "rimraf dist && electron-vite build && electron-builder --win --config",
    "generate-client": "orval --config ./orval.config.js",
    "test": "vitest --no-watch --coverage",
    "dev:dist": "http-server ./dist"
  },
  "dependencies": {
    "@aptabase/electron": "^0.3.1",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@fontsource/montserrat": "^5.0.18",
    "@mantine/code-highlight": "^7.12.0",
    "@mantine/core": "^7.12.0",
    "@mantine/form": "^7.12.0",
    "@mantine/hooks": "^7.12.0",
    "@mantine/modals": "^7.12.0",
    "@mantine/notifications": "^7.12.0",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.3.10",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/testing": "^10.4.15",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@types/bytes": "^3.1.4",
    "axios": "^1.7.3",
    "bytes": "^3.1.2",
    "electron-trpc": "^0.6.1",
    "electron-updater": "^6.2.1",
    "fs-extra": "^11.2.0",
    "fuse.js": "^7.0.0",
    "glob": "^11.0.0",
    "http-server": "^14.1.1",
    "lodash": "^4.17.21",
    "marked": "13.0.3",
    "mongodb-memory-server": "^10.1.2",
    "mongoose": "^8.8.4",
    "ms": "^2.1.3",
    "nest-winston": "^1.9.7",
    "nock": "^13.5.6",
    "nodejs-file-downloader": "^4.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-router-dom": "^6.26.0",
    "react-use": "^17.5.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swr": "^2.2.5",
    "winston": "^3.17.0",
    "write-file-atomic": "^6.0.0",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.3",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@swc/core": "^1.7.6",
    "@types/glob": "^8.1.0",
    "@types/jest-when": "^3.5.5",
    "@types/lodash": "^4.17.7",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/write-file-atomic": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.8",
    "electron": "30.3.1",
    "electron-builder": "24.13.3",
    "electron-vite": "2.3.0",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2",
    "jest-when": "^3.5.5",
    "mock-fs": "^5.4.1",
    "orval": "^7.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.0.0",
    "typescript": "5.5.4",
    "vite": "^5.4.0",
    "vitest": "2.1.8"
  }
}
